---
import { SOCIALS } from "@/constants";
import LinkButton from "./LinkButton.astro";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<div class:list={["flex-wrap justify-center gap-1", { flex: centered }]}>
  {
    SOCIALS.map(social => (
      <LinkButton
        href={social.href}
        class="p-2 hover:rotate-6 sm:p-1"
        title={social.linkTitle}
        target="_blank"
        rel="noopener noreferrer"
      >
        <social.icon
          class:list={[
            "inline-block size-6 fill-transparent stroke-current stroke-2 opacity-90 group-hover:fill-transparent",
            {
              "scale-[1.4] sm:scale-[1.25]": social.name === "Instagram",
              "scale-125 sm:scale-110": social.name !== "Instagram",
            },
          ]}
        />
        <span class="sr-only">{social.linkTitle}</span>
      </LinkButton>
    ))
  }
</div>
