---
import { SHARE_LINKS } from "@/constants";
import LinkButton from "./LinkButton.astro";

const URL = Astro.url;
---

{
  SHARE_LINKS.length > 0 && (
    <div class="flex flex-none flex-col items-center justify-center gap-1 md:items-start">
      <span class="italic">Share this post on:</span>
      <div class="text-center">
        {SHARE_LINKS.map(social => (
          <LinkButton
            href={`${social.href + URL}`}
            class="scale-90 p-2 hover:rotate-6 sm:p-1"
            title={social.linkTitle}
            target="_blank"
            rel="noopener noreferrer"
          >
            <social.icon
              class:list={[
                "inline-block size-6 fill-transparent stroke-current stroke-2 opacity-90 group-hover:fill-transparent",
                {
                  "scale-[1.4] sm:scale-[1.25]": social.name === "Instagram",
                  "scale-125 sm:scale-110": social.name !== "Instagram",
                },
              ]}
            />
            <span class="sr-only">{social.linkTitle}</span>
          </LinkButton>
        ))}
      </div>
    </div>
  )
}
